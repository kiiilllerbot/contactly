<div class="container-fluid">
	<div class="row justify-content-center">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<form action="/contacts/create" method="post">
						<% if @contact.errors.any? %>
							<div class="border-bottom">
								<h4 class="my-2"><%= @contact.errors.count %> erros are preventing the form to be saved.</h4>
								<% @contact.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</div>
						<% end %>
						<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
						<div class="form-group">
							<label class="my-1">Name</label>
							<input type="text" name="contact[name]" id="name" class="form-control">
						</div>

						<div class="form-group">
							<label class="my-1">Email</label>
							<input type="email" name="contact[email]" id="email" class="form-control">
						</div>

						<div class="form-group">
							<label class="my-1">Company</label>
							<input type="text" name="contact[company]" id="company" class="form-control">
						</div>

						<div class="form-group">
							<label class="my-1">Phone</label>
							<input type="text" name="contact[phone]" id="phone" class="form-control">
						</div>

						<div class="form-group">
							<label class="my-1">Address</label>
							<input type="text" name="contact[address]" id="address" class="form-control">
						</div>

						<div class="row mt-4">
							<div class="col-lg-10">
								<div class="form-group">
									<select name="contact[group_id]" id="group" class="form-control">
										<% Group.all.each do |group| %>
											<option value="<%= group.id %>"><%= group.name %></option>
										<% end %>
									</select>
								</div>
							</div>
							<div class="col-lg-2">
								<a href="#" id="add-group-btn" class="btn btn-primary col-12">Add Group</a>
							</div>
						</div>

						<div class="form-group mt-2">
							<button type="submit" class="btn btn-primary col-12">Save</button>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>