<div class="row justify-content-center mt-3">
  <div class="col-lg-3">
		<div class="card" id="sidebar">
			<%= render "shared/sidebar" %>
		</div>
		<div class="mt-2">
			<%= link_to edit_user_registration_path, :class=>"btn col-12 btn-green" do %>
				<i class="fa-solid fa-screwdriver-wrench"></i> Account Settings
			<% end %>
		</div>
		<div class="mt-1">
			<%= link_to destroy_user_session_path, method: :delete, :class=>"btn col-12 btn-green" do %>
				<i class="fa-solid fa-arrow-right-from-bracket"></i> Sign Out
			<% end %>
		</div>
	</div>
  <div class="col-lg-9">
		<div class="row">
			<div id="contacts">
				<%= render @contacts %>
			</div>

			<div class="d-flex justify-content-center align-items-center mt-3">
				<div id="paginator"><%= paginate @contacts, remote: true %></div>
			</div>
		</div>
	</div>
</div>