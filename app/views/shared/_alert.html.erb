<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-lg-6">
        <% if flash[:alert] %>
    <div class="alert alert-primary"><%= alert %></div>
<% elsif flash[:notice] %>
    <div class="alert alert-info"><%= notice %></div>
<% elsif flash[:error] %>
    <div class="alert alert-danger"><%= error %></div>
<% end %>
        </div>
    </div>
</div>